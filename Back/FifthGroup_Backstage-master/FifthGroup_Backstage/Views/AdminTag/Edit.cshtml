@model FifthGroup_Backstage.ViewModel.EditTagRequest
@{
}


<div class="container">

    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="from-label">Id</label>
                <input type="text" id="id" class="form-control" asp-for="Id" readonly />
            </div>
            <div class="mb-3">
                <label class="from-label">Name</label>
                <input type="text" id="name" class="form-control" asp-for="Name" />
            </div>
            <div class="mb-3">
                <label class="from-label">Display Name</label>
                <input type="text" id="displayname" class="form-control" asp-for="DisplayName" />
            </div>
            <div class="mb-3">
                <div class="d-flex">
                    <button type="submit" class="btn btn-dark">Update</button>
                    <button type="submit" class="btn btn-danger ms-2"
                            asp-area=""
                            asp-controller="AdminTag"
                            asp-action="Delete">
                        Delete
                    </button>
                </div>

            </div>
        </form>
    }


    else
    {
        <p>The Tag not found</p>
    }
</div>





