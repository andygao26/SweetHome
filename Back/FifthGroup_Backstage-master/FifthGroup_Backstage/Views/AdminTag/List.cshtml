@model List<FifthGroup_Backstage.Models.Tag>
@{
}

<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">公告管理/</span> 公告類型清單</h4>

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">公告內容</h5>
                        <small class="text-muted float-end">Announcemet Type</small>
                    </div>
                    <div class="card-body">
                        <div class="container py-5">
                            @{
                                if (Model != null && Model.Any())
                                {
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Name</th>
                                                <th>Display Name</th>
                                                <th></th>
                                            </tr>

                                        </thead>

                                        <tbody>

                                            @foreach (var tag in Model)
                                            {
                                                <tr>
                                                    <td>@tag.Id</td>
                                                    <td>@tag.Name</td>
                                                    <td>@tag.DisplayName</td>
                                                    <td>
                                                        <a asp-area="" asp-controller="AdminTag" asp-action="Edit" asp-route-id="@tag.Id">修改</a>
                                                    </td>
                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p>No Tags found ! </p>
                                }
                            }


                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- / Content -->
</div>







