@model FifthGroup_Backstage.ViewModel.AddTagRequest
@{
}



<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">公告管理/</span> 新增公告類型</h4>

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">公告內容</h5>
                        <small class="text-muted float-end">Announcemet Type</small>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="mb-3">
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" asp-for="Name" />

                            </div>
                            <div class="mb-3">
                                <label class="form-label">DisplayName</label>
                                <input type="text" class="form-control" id="displayName" asp-for="DisplayName" />
                            </div>

                            <div class="mb-3">
                                <button type="submit" class="btn btn-dark">Submit</button>

                            </div>

                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- / Content -->
</div>









