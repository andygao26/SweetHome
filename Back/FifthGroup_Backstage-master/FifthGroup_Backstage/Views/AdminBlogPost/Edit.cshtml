@model FifthGroup_Backstage.ViewModel.EditBlogPostRequest



<div class="container py-5">

    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" id="id" asp-for="Id" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Heading</label>
                <input type="text" class="form-control" id="heading" asp-for="Heading" />
            </div>
            <div class="mb-3">
                <label class="form-label">Page Title</label>
                <input type="text" class="form-control" id="PageTitle" asp-for="PageTitle" />
            </div>
            <div class="mb-3">
                <label class="form-label">Content</label>
                <textarea type="text" class="form-control" id="content" asp-for="Content"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Short Description</label>
                <input type="text" class="form-control" id="shortDescription" asp-for="ShortDescription" />
            </div>


            <div class="mb-3">
                <label class="form-label">Feactured Image Upload</label>
                <input type="file" class="form-control" id="feacturedImageUpload" />

                @if (Model.FeacturedImageUrl != null)
                {
                    <img src="@Model.FeacturedImageUrl" id="feacturedImageDisplay" style="display:block;width:300px" />
                }
                else
                {
                    <img src="" id="feacturedImageDisplay" style="display:none;width:300px" />
                }

            </div>


            <div class="mb-3">
                <label class="form-label">Feactured Image Url</label>
                <input type="text" class="form-control" id="feacturedImageUrl" asp-for="FeacturedImageUrl" />
            </div>
            <div class="mb-3">
                <label class="form-label">Url Handle</label>
                <input type="text" class="form-control" id="urlHandle" asp-for="UrlHandle" />
            </div>
            <div class="mb-3">
                <label class="form-label">Published Date</label>
                <input type="date" class="form-control" id="publishedDate" asp-for="PublishedDate" />
            </div>
            <div class="mb-3">
                <label class="form-label">Author</label>
                <input type="text" class="form-control" id="author" asp-for="Author" />
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="true" id="visible" asp-for="Visible">
                <label class="form-check-label">
                    Is Viseable ?
                </label>
            </div>
            <div class="mb-3">
                <label class="form-label">Tags</label>
                <select class="form-select" asp-items="@Model.Tags" asp-for="SelectedTags"></select>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-dark">Update</button>
                <button type="submit" class="btn btn-danger" asp-area="" asp-controller="AdminBlogPost" asp-action="Delete">Delete</button>
            </div>

        </form>

    }
    else
    {
        
        <p>No Blog Post Found！</p>
    }

</div>

@section Scripts
    {
    <script>
        var editor = new FroalaEditor('#content');//initialized the editor

        const featuredUploadElement = document.getElementById('feacturedImageUpload');
        const featuredImageUrlElement = document.getElementById('feacturedImageUrl');
        const feacturedImageDisplayElement = document.getElementById('feacturedImageDisplay')

        async function uploadFeacturedImage(e) {
            console.log(e.target.files[0])
            let data = new FormData();
            data.append('file', e.target.files[0]);
            //upload this data to controller
            await fetch('/api/images', {
                method: 'POST',
                headers: {
                    'Accept': '*/*',
                },
                body: data
            }).then(response => response.json())
                .then(result => {
                    featuredImageUrlElement.value = result.link;
                    feacturedImageDisplayElement.src = result.link;
                    feacturedImageDisplayElement.style.display = 'block';
                })
        }
        featuredUploadElement.addEventListener('change', uploadFeacturedImage)
    </script>
}

