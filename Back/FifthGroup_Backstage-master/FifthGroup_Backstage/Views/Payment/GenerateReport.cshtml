@using System.Globalization;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<FifthGroup_Backstage.ViewModel.FinancialReport>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">繳費管理 /</span> 繳費狀況一覽表</h4>

    <div class="card">
        <h4 class="card-header" style="margin-bottom: 0;">繳費狀況一覽表</h4>
        <div class="table-responsive text-nowrap">

   
              
                    <form method="post" action="@Url.Action("GenerateReport", "Payment")" class="row g-5">
                     
                        <div class="col-md-3">
                            <label for="startDate" class="form-label">開始日期:</label>
                            @Html.TextBox("startDate", null, new { @class = "form-control form-date-control", type = "date", id = "startDate" })
                        </div>
                        <div class="col-md-3">
                            <label for="endDate" class="form-label">結束日期:</label>
                            @Html.TextBox("endDate", null, new { @class = "form-control form-date-control", type = "date", id = "endDate" })
                        </div>
                        <div class="col-md-3">
                    <button id="filterButton" class="btn btn-dark">篩選</button>
                        </div>
              
                  
            

 
                    </form>
           
         

            <table class="table">
                <thead>
                    <tr>
                        <th>繳費編號</th>
                        <th>繳費項目</th>
                        <th>繳費截止日</th>
                        <th>樓層</th>
                        <th>應收款項</th>
                        <th>實收</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                      

                        <tr>
                            <td>@item.PaymentItemCode</td>
                            <td>@item.PaymentName</td>
                            <td>@item.PaymentItemDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.CommunityBuildingName</td>
                            <td>@item.TotalAmountToReceive.ToString("C0", new CultureInfo("zh-TW"))</td>
                            <td>@item.TotalAmountReceived.ToString("C0", new CultureInfo("zh-TW"))</td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- 分页样式 -->
            <div class="card-body">
                <div class="row">
                    <div class="col">
                       
                        <div class="demo-inline-spacing">
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    @if (Model.HasPreviousPage)
                                    {
                                        <li class="page-item first">
                                            <a class="page-link" href="@Url.Action("GenerateReport", new { page = 1, pageSize = Model.PageSize })">
                                                <i class="tf-icon bx bx-chevrons-left"></i>
                                            </a>
                                        </li>
                                        <li class="page-item prev">
                                            <a class="page-link" href="@Url.Action("GenerateReport", new { page = Model.PageNumber - 1, pageSize = Model.PageSize })">
                                                <i class="tf-icon bx bx-chevron-left"></i>
                                            </a>
                                        </li>
                                    }
                                    @for (int i = 1; i <= Model.PageCount; i++)
                                    {
                                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("GenerateReport", new { page = i, pageSize = Model.PageSize })">@i</a>
                                        </li>
                                    }
                                    @if (Model.HasNextPage)
                                    {
                                        <li class="page-item next">
                                            <a class="page-link" href="@Url.Action("GenerateReport", new { page = Model.PageNumber + 1, pageSize = Model.PageSize })">
                                                <i class="tf-icon bx bx-chevron-right"></i>
                                            </a>
                                        </li>
                                        <li class="page-item last">
                                            <a class="page-link" href="@Url.Action("GenerateReport", new { page = Model.PageCount, pageSize = Model.PageSize })">
                                                <i class="tf-icon bx bx-chevrons-right"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
