@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<FifthGroup_Backstage.ViewModel.UnpaidResidentsViewModel>


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">繳費管理 /</span> 費用逾期未繳住戶列表</h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h4 class="card-header">未付款住戶列表</h4>
 
        <div class="table-responsive text-nowrap">
          
            <div class="col-12 mt-2"> 
              
                
                       
                        <div class="demo-inline-spacing">
                            <form method="post" asp-controller="Payment" asp-action="SendPaymentRemindersToAll">
                                <button type="submit" class="btn rounded-pill btn-primary button btn-sm">
                                    <span class="tf-icons bx bx-bell mt-2 mb-2 text-lightest">一鍵催繳所有住戶</span>
                                </button>
                            </form>

                        </div>
                   
               
          </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>戶號</th>
                        <th>付款項目</th>
                        <th>繳費期限</th>
                        <th>金額</th>
                        <th>操作</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in Model)
                    {
                        <tr>
                            <td>@payment.HouseholdCode</td>
                            <td>@payment.PaymentCategory</td>
                            <td>@payment.ExpiredDay</td>
                            <td>@payment.Amount</td>
                           
                            <td>
                                <form method="post" asp-action="SendPaymentReminder">
                                    <input type="hidden" name="householdCode" value="@payment.HouseholdCode" />
                                </form>

                                <form method="post" asp-controller="Payment" asp-action="SendPaymentReminder">
                                    <input type="hidden" name="householdCode" value="@payment.HouseholdCode" />
                                    <button type="submit" class="btn rounded-pill bg-black button btn-sm">
                                        <span class="tf-icons bx bx-bell mt-2 mb-2 text-lightest">一鍵催繳</span>
                                    </button>
                                </form>

                            </td>
                        </tr>
                        
                    }
                </tbody>
            </table>
            @* 分頁按鈕 *@
            <div class="pager mt-3 ">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item first">
                                <a class="page-link" href="@Url.Action("UnpaidResidentsList", new { page = 1, pageSize = 10 })">
                                    <i class="tf-icon bx bx-chevrons-left"></i>
                                </a>
                            </li>
                            <li class="page-item prev">
                                <a class="page-link" href="@Url.Action("UnpaidResidentsList", new { page = Model.PageNumber - 1, pageSize = 10 })">
                                    <i class="tf-icon bx bx-chevron-left"></i>
                                </a>
                            </li>
                        }
                        @for (int i = 1; i <= Model.PageCount; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="@Url.Action("UnpaidResidentsList", new { page = i, pageSize = 10 })">@i</a>
                            </li>
                        }
                        @if (Model.HasNextPage)
                        {
                            <li class="page-item next">
                                <a class="page-link" href="@Url.Action("UnpaidResidentsList", new { page = Model.PageNumber + 1, pageSize = 10 })">
                                    <i class="tf-icon bx bx-chevron-right"></i>
                                </a>
                            </li>
                            <li class="page-item last">
                                <a class="page-link" href="@Url.Action("UnpaidResidentsList", new { page = Model.PageCount, pageSize = 10 })">
                                    <i class="tf-icon bx bx-chevrons-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>

        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

</div>
