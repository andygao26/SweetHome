                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PlaceName)
                                </td>
                                <td>
                                    @Html.ActionLink("修改", "Edit", new { id=item.PlaceCode }) |
                                    @*                 @Html.ActionLink("細節", "Details", new { /* id=item.PrimaryKey */ }) | *@
