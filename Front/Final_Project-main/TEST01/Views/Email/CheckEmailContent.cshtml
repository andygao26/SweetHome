@model FifthGroup_front.ViewModels.CEmails

@{
    ViewData["Title"] = "CheckEmailContent";
}

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 wow fadeIn"
     data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-2 text-dark mb-4 animated slideInDown">信箱服務</h1>
    </div>
</div>
<!-- Page Header End -->

<!-- Products Start -->
<div class="container-fluid product py-3">
    <div class="section-title text-center mx-auto wow fadeInUp py-3"
     data-wow-delay="0.1s"
     style="max-width: 500px">
    <h1 class="display-6">信件內容</h1>
    </div>

<div class="card " style="padding: 10px;" class="">

<div class="row">
    <div class="" style="max-width: 100%; color: black;">
        <form asp-action="CheckEmailContent" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <button class="btn btn-light" type="button" style="width: 120px; height: 30px; text-align: left; padding: 1px;">
                <a asp-area="" asp-controller="Email" asp-action="EmailList" class="checkemailtextcolor"><i class="fa-solid fa-arrow-left"></i>返回信箱</a>
            </button>
            <hr /> <!-- 這裡是新添加的線 -->
            <h4 style="color: black;">@Model.Email.Subject</h4>
            <h7>無聲鄰陸社區 &nbsp;@Model.Email.FromEmail</h7>
            <br />
                <div style="display: flex; justify-content: space-between; width: 100%;">
                    <h7>寄給 &nbsp;@Model.ResidentName &nbsp;&nbsp;Email: @Model.Email.ToEmail &nbsp;&nbsp;戶號: @Model.Email.HouseholdCode <i class="fa-solid fa-caret-down"></i></h7>
                    <h7>寄信時間: @Model.Email.Time</h7>
                </div>
            <br />
            <br />
               <h5 style="color: black;">@Html.Raw(Model.Email.Body.Replace("\n", "<br />"))</h5>
            <br />
            <br />
            <br />
            <br />
            <h5 style="color: black;">無聲鄰陸社區敬上~</h5>          
        </form>
    </div>
</div>


</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
